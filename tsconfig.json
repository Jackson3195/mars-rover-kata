{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "esModuleInterop": true,
      "types": ["node", "jest"],
      "target": "ES2020",
      "skipLibCheck": true,
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/node_modules/*"]
  }
  